{%- assign header_font = settings.heading_font -%}
{%- assign body_font = settings.body_font -%}
{% style %}

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
	vertical-align: baseline;
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section {
	display: block;
}
body {
	line-height: 1;
}
ol, ul {
	list-style: none;
}
blockquote, q {
	quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
	content: '';
	content: none;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
}

.visually-hidden {
  position: absolute !important;
  overflow: hidden;
  clip: rect(0 0 0 0);
  height: 1px;
  width: 1px;
  margin: -1px;
  padding: 0;
  border: 0;
}

:root{
    --body-font-family: {{ body_font.family }};
    --body-font-family-fallback: {{ body_font.family }};
    --body-font-weight: {{ body_font.weight }};
    --body-font-style: {{ body_font.style }};
    --body-font-size: {{ settings.body_fs }}px;
    --header-font-family: {{ header_font.family }};
    /* --header-font-family: "Magnat Poster"; */
    --header-font-family-fallback: {{ header_font.family }};
    --header-font-weight: {{ header_font.weight }};
    --header-font-style: {{ header_font.style }};
    --header-transform: {{ settings.heading_transform }};
    --header-letter-spacing: {{ settings.heading_letter_spacing }}px;

    --primary-color: {{ settings.color_primary }};
    --primary-color-light: {{ settings.color_primary | color_lighten: 90 }};
    --primary-link-color:{{ settings.primary_link_color }};
    --primary-link-color-hover: {{ settings.primary_link_color_hover }};
    --secondary-link-color: {{ settings.secondary_link_color }};
    --secondary-link-color-hover: {{ settings.secondary_link_color_hover }};

    --body-text-color: {{ settings.color_body_text }};

    --form-border-color: #EEEEEE;
    --color-blankstate: {{ settings.color_body_text | color_modify: "alpha", 0.35 }};
    --color-blankstate-border: {{ settings.color_body_text | color_modify: "alpha", 0.2 }};
    --color-blankstate-background: {{ settings.color_body_text | color_modify: "alpha", 0.1 }};

    --font-size-base: {{ settings.body_fs }}px;
    --body-weight: {{ settings.body_font.weight }};
    --heading_one_fs: {{ settings.heading_1_fs }}px;
    --heading_two_fs: {{ settings.heading_2_fs }}px;
    --heading_three_fs: {{ settings.heading_3_fs }}px;
    --heading_four_fs: {{ settings.heading_4_fs }}px;
    --heading_five_fs: {{ settings.heading_5_fs }}px;
    --heading_six_fs: {{ settings.heading_6_fs }}px;

    --svg-select-icon: url("{{ 'ico-select.svg' | asset_url }}");
    --svg-icon-color: #bfbfbf;

    --primary-btn-bg: {{ settings.btn_primary_bg }};
    --primary-btn-text: {{ settings.btn_primary_text }};
    --primary-btn-bg-hover: {{ settings.btn_primary_bg_hover }};
    --primary-btn-text-hover: {{ settings.btn_primary_text_hover }};

    --secondary-btn-bg: {{ settings.btn_secondary_bg }};
    --secondary-btn-text: {{ settings.btn_secondary_text }};
    --secondary-btn-bg-hover: {{ settings.btn_secondary_bg_hover }};
    --secondary-btn-text-hover: {{ settings.btn_secondary_text_hover }};

    --tertiary-btn-bg: {{ settings.btn_tertiary_bg }};
    --tertiary-btn-text: {{ settings.btn_tertiary_text }};
    --tertiary-btn-bg-hover: {{ settings.btn_tertiary_bg_hover }};
    --tertiary-btn-text-hover: {{ settings.btn_tertiary_text_hover }};

    --atc-btn-bg: {{ settings.btn_atc_bg }};
    --atc-btn-text: {{ settings.btn_atc_text }};
    --atc-btn-bg-hover: {{ settings.btn_atc_bg_hover }};
    --atc-btn-text-hover: {{ settings.btn_atc_text_hover }};

    --title-bg-image: url("{{ settings.title_default_bg_image | img_url: '1240x' }}");
    --title-bg-color:  {{ settings.title_default_bg_color }};
    --title-font-color: {{ settings.title_default_text_color }};

    --header-link-color: {{ settings.header_link_color }};
    --scrollbar-color: {{ settings.color_scrollbar }};
    --border-color: {{ settings.color_border }};
    --search-results-background: #FFFFFF;

    --nav-tier-one-font-size: 14px;
    --nav-tier-two-font-size: 14px;
    --nav-tier-three-font-size: 14px;
    --nav-tier-one-font-colour: {{ settings.header_link_color }};
    --nav-tier-two-font-colour: {{ settings.header_link_color }};
    --nav-tier-three-font-colour: {{ settings.header_link_color }};

    --subscription-product-block-background-color: {{ settings.subscription_product_block_background_color}};
    --subscription-product-block-text-color: {{ settings.subscription_product_block_text_color }};
    --subscription-product-active-block-background-color: {{ settings.subscription_product_active_block_background_color }};
    --subscription-product-active-block-text-color: {{ settings.subscription_product_active_block_text_color }};
    
    --mega-menu-background: #FFFFFF;
}

body{
  font-family: var(--body-font-family), var(--body-font-family-fallback);
  font-weight: var(--body-font-weight);
  font-style: var(--body-font-style);
  font-size: var(--body-font-size);
  color: var(--body-text-color);
}

p, svg{
  color: var(--body-text-color);
}

.btn, button,
.heading,
h1, h2, h3, h4, h5, h6,
h1.h1, h2.h2, h3.h3, h4.h4, h5.h5, h6.h6,
.h1, .h2, .h3, .h4, .h5, .h6{
  font-style: var(--header-font-style);
  font-family: var(--header-font-family);
  font-weight: var(--header-font-weight);
  letter-spacing: var(--header-letter-spacing);
  text-transform: var(--header-transform);
}

h1, .h1{ font-size: var(--heading_one_fs); }
h2, .h2{ font-size: var(--heading_two_fs); }
h3, .h3{ font-size: var(--heading_three_fs); }
h4, .h4{ font-size: var(--heading_four_fs); }
h5, .h5{ font-size: var(--heading_five_fs); }
h6, .h6{ font-size: var(--heading_six_fs); }

.primary-link{ color: var(--primary-link-color); }

.primary-button{
  background-color: var(--primary-btn-bg);
  color: var(--primary-btn-text);
}

.primary-button:hover{
  background-color: var(--primary-btn-bg-hover);
  color: var(--primary-btn-text-hover);
}

.secondary-button{
  background-color: var(--secondary-btn-bg);
  color: var(--secondary-btn-text);
}

.secondary-button:hover{
  background-color: var(--secondary-btn-bg-hover);
  color: var(--secondary-btn-text-hover);
}

.tertiary-button{
  background-color: var(--tertiary-btn-bg);
  color: var(--tertiary-btn-text);
}

.tertiary-button:hover{
  background-color: var(--tertiary-btn-bg-hover);
  color: var(--tertiary-btn-text-hover);
}

.add-to-cart-button{
  background-color: var(--atc-btn-bg);
  color: var(--atc-btn-text);
}

.add-to-cart-button:hover{
  background-color: var(--atc-btn-bg-hover);
  color: var(--atc-btn-text-hover);
}

[x-cloak] { display: none; }

.is--hidden{
  display: none !important;
}

{% endstyle %}

